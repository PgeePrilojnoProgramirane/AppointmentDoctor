@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentDoctor.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))//!Потребителят е вписан вече
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name</li>
            <li ><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                Log off</a></li>
        </ul>
    </form>
}
else//Ако не е вписан, извежда се навигация за вписване или регистрация
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Register" asp-controller="Account" id="registerLink">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Login" asp-controller="Account" id="loginLink">Sign In</a>
        </li>
    </ul>
}